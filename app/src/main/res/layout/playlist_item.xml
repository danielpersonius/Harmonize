<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/song_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

    <TextView
            android:id="@+id/playlist_song_name"
            tools:hint="Song name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
                tools:hint="Artist name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playlist_artist_name"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        <TextView
                android:text="@string/circle_bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playlist_circle_bullet"/>
        <TextView
                tools:hint="Album name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playlist_album_name"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/song_info_icon"
            android:src="@drawable/ic_info_icon"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:layout_width="25dp"
            android:layout_height="20dp"/>
</LinearLayout>