<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="-1"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Export"
            android:textSize="48dp"
            android:textStyle="bold"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/export_spotify_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_spotify"
                android:scaleType="fitXY"
                android:contentDescription="@string/spotify_platform_banner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
                android:id="@+id/export_soundcloud_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_soundcloud"
                android:scaleType="fitXY"
                android:contentDescription="@string/soundcloud_platform_banner"
                app:layout_constraintCircle="@+id/export_spotify_button"
                app:layout_constraintCircleAngle="110"
                app:layout_constraintCircleRadius="90dp"/>
        <ImageButton
                android:id="@+id/export_apple_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_itunes"
                android:scaleType="fitXY"
                android:contentDescription="@string/apple_platform_banner"
                app:layout_constraintCircle="@+id/export_spotify_button"
                app:layout_constraintCircleAngle="250"
                app:layout_constraintCircleRadius="90dp"/>
        <ImageButton
                android:id="@+id/export_pandora_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_pandora"
                android:scaleType="fitXY"
                android:contentDescription="@string/pandora_platform_banner"
                app:layout_constraintCircle="@+id/export_spotify_button"
                app:layout_constraintCircleAngle="180"
                app:layout_constraintCircleRadius="75dp"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>